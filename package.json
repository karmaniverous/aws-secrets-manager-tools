{
  "author": "Jason Williscroft",
  "bin": {
    "aws-secrets-manager-tools": "./dist/cli/aws-secrets-manager-tools/index.js"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "unreleased": true,
    "commitLimit": false,
    "hideCredit": true
  },
  "bugs": {
    "url": "https://github.com/karmaniverous/aws-secrets-manager-tools/issues"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.965.0",
    "@karmaniverous/aws-xray-tools": "^0.2.0",
    "@karmaniverous/get-dotenv": "^7.0.1"
  },
  "peerDependenciesMeta": {
    "aws-xray-sdk": {
      "optional": true
    }
  },
  "description": "Tools and get-dotenv plugin for AWS Secrets Manager env-map secrets.",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.6",
    "auto-changelog": "^2.5.0",
    "aws-xray-sdk": "^3.12.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "fs-extra": "^11.3.3",
    "happy-dom": "^20.1.0",
    "knip": "^5.80.0",
    "lefthook": "^2.0.13",
    "prettier": "^3.7.4",
    "release-it": "^19.2.3",
    "rimraf": "^6.1.2",
    "rollup": "^4.55.1",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typedoc-plugin-replace-text": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/mjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/aws-secrets-manager-tools#readme",
  "keywords": [
    "typescript",
    "aws",
    "secrets",
    "secrets-manager",
    "aws-secrets-manager",
    "dotenv",
    "getdotenv",
    "cli",
    "xray"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/mjs/index.js",
  "name": "@karmaniverous/aws-secrets-manager-tools",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --unreleased-only --stdout --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run knip",
        "npm run build"
      ],
      "before:npm:release": [
        "npx auto-changelog -p",
        "npm run docs",
        "git add -A"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch ${branchName}"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/aws-secrets-manager-tools.git"
  },
  "scripts": {
    "build": "rimraf dist && getdotenv -a -v NO_COLOR=1 cmd tsx ./node_modules/rollup/dist/bin/rollup --config rollup.config.ts",
    "cli": "tsx ./src/cli/aws-secrets-manager-tools/index.ts",
    "changelog": "auto-changelog",
    "docs": "typedoc",
    "knip": "knip",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "getdotenv -R cmd release-it",
    "release:pre": "npm run release -- --no-git.requireBranch --github.prerelease --preRelease",
    "smoke:flags": "tsx ./smoke/aws-secrets-cli-flags.ts",
    "smoke:overlay": "tsx ./smoke/aws-secrets-config-overlay.ts",
    "test": "vitest run",
    "typecheck": "tsc"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.1.1"
}
